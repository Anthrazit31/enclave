// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  username    String   @unique
  email       String   @unique
  passwordHash String  @map("password_hash")
  accessLevel String   @map("access_level") @default("RESEARCHER")
  isActive    Boolean  @default(true) @map("is_active")
  lastLogin   DateTime? @map("last_login")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  sessions      UserSession[]
  terminalSessions TerminalSession[]
  securityLogs  SecurityLog[]

  @@map("users")
}

model UserSession {
  id               String   @id @default(uuid())
  userId           String   @map("user_id")
  tokenHash        String   @map("token_hash")
  refreshTokenHash String   @map("refresh_token_hash")
  expiresAt        DateTime @map("expires_at")
  ipAddress        String   @map("ip_address")
  userAgent        String?  @map("user_agent")
  isActive         Boolean  @default(true) @map("is_active")
  createdAt        DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_sessions")
}

model TerminalSession {
  id             String   @id @default(uuid())
  userId         String   @map("user_id")
  terminalType   String   @map("terminal_type")
  sessionData    String   @map("session_data")
  commandHistory String   @map("command_history")
  currentDirectory String @map("current_directory") @default("/")
  isActive       Boolean  @default(true) @map("is_active")
  startedAt      DateTime @default(now()) @map("started_at")
  lastActivity   DateTime @default(now()) @map("last_activity")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("terminal_sessions")
}

model SecurityLog {
  id          String   @id @default(uuid())
  userId      String?  @map("user_id")
  eventType   String   @map("event_type")
  description String
  ipAddress   String   @map("ip_address")
  userAgent   String?  @map("user_agent")
  metadata    String?  @map("metadata")
  createdAt   DateTime @default(now()) @map("created_at")

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("security_logs")
}

model FileSystem {
  id         String   @id @default(uuid())
  name       String
  path       String   @unique
  type       String   @default("FILE")
  content    String?
  parentId   String?  @map("parent_id")
  accessLevel String  @map("access_level") @default("PUBLIC")
  isActive   Boolean  @default(true) @map("is_active")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@map("filesystem")
}